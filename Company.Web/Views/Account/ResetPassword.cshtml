@model ResetPassswordViewModel

@{
	ViewData["Title"] = "ResetPasssword";
	Layout = "~/Views/Shared/_Auth.cshtml";
}
<form asp-action="ResetPasssword" method="post">
	<input type="hidden"  value="Email" />
	<input type="hidden" value="Token"  />
	<div class="text-danger" asp-validation-summary="All"></div>
	<input type="password" asp-for="Password" placeholder="Password" required="" class="form-control" />
	<span asp-validation-for="Password"></span>
	<br />
	<input type="password" asp-for="ConfirmedPassword" placeholder="ConfirmedPassword" required="" class="form-control" />
	<span asp-validation-for="ConfirmedPassword"></span>
	<br />

	<input class="btn btn-primary" type="submit" value="Change Password" />
</form>