@model ForgetPasswordViewModel
@{
	ViewData["Title"] = "ForgetPassword";
	Layout = "~/Views/Shared/_Auth.cshtml";
}
<h1>ForgetPassword</h1>


<form asp-action="ForgetPassword" method="post">
	<div class="text-danger" asp-validation-summary="All"></div>
	<input type="email" asp-for="Email" placeholder="Email" required="" class="form-control" />
	<span asp-validation-for="Email"></span>
	<input  class="btn btn-primary" type="submit" value="Reset Password"/>
</form>
