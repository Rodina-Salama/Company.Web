@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<h1>SignUp</h1>




<form asp-action="SignUp" method="post">

	<input type="text" asp-for="FirstName" placeholder="FirstName"  required="" class="form-control"/>
	<span asp-validation-for="FirstName"></span>
	<br />

	<input type="text" asp-for="LastName" placeholder="LastName" required="" class="form-control" />
	<span asp-validation-for="LastName"></span>
	<br />
	<input type="email" asp-for="Email" placeholder="Email" required="" class="form-control" />
	<span asp-validation-for="Email"></span>
	<br />
	<input type="password" asp-for="Password" placeholder="Password" required="" class="form-control" />
	<span asp-validation-for="Password"></span>
	<br />
	<input type="password" asp-for="ConfirmedPassword" placeholder="ConfirmedPassword" required="" class="form-control" />
	<span asp-validation-for="ConfirmedPassword"></span>
	<br />
	
	<div class="wthree-text">
		<label class="anim">
			<input   type="checkbox" required/>
			<span>I agree to terms & conditions</span>
		</label>
		<div class="clear"></div>
	</div>
	<input type="submit" value="SignUp" class="btn btn-primary" />

</form>
<p class="text-black">Do you Have an account?<a asp-action="Login">Login now!</a></p>


